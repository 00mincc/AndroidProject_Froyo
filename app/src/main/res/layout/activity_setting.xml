<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/froyo_logo"
        android:layout_width="330dp"
        android:layout_height="42dp"
        android:layout_gravity="top|center_horizontal"
        android:contentDescription="상단로고"
        android:scaleType="fitCenter"
        android:src="@drawable/froyo_logo" />

    <!-- 메인 컨텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">


        <!-- 흰색 카드 배경 -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:background="@drawable/card_background"
            android:elevation="10dp">

            <!-- 소리 스위치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="소리"
                    android:textSize="18sp"
                    android:textColor="#000" />
                <Switch
                    android:id="@+id/sound_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 진동 스위치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="진동"
                    android:textSize="18sp"
                    android:textColor="#000" />
                <Switch
                    android:id="@+id/vibration_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 알림 스위치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="알림"
                    android:textSize="18sp"
                    android:textColor="#000" />
                <Switch
                    android:id="@+id/notification_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 계정 관리 버튼 -->
            <Button
                android:id="@+id/management_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계정 관리"
                android:background="@drawable/button_background"
                android:layout_marginBottom="16dp"
                android:textColor="#000"
                android:elevation="4dp"
                android:padding="10dp" />

            <!-- 약관 보기 -->
            <TextView
                android:id="@+id/terms_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약관"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#666"
                android:layout_marginBottom="20dp" />

            <!-- 데이터 삭제 버튼 -->
            <Button
                android:id="@+id/logoout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:backgroundTint="#FF4444"
                android:textColor="#FFFFFF"
                android:elevation="4dp"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 선 추가 (C0C0C0 컬러) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#C0C0C0"
        android:layout_marginBottom="50dp" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FAFAFA"
        android:elevation="4dp"
        android:gravity="center">

        <!-- 왼쪽 폴더 버튼 -->
        <ImageButton
            android:id="@+id/folder_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/folder"
            android:scaleType="centerInside"
            android:contentDescription="@string/question_list" />

        <!-- 중앙 + 버튼 -->
        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/add_btn"
            android:scaleType="centerInside"
            android:contentDescription="@string/make_question" />

        <!-- 오른쪽 톱니바퀴 버튼 -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/on_settings"
            android:scaleType="centerInside"
            android:contentDescription="@string/setting" />
    </LinearLayout>
</FrameLayout>
